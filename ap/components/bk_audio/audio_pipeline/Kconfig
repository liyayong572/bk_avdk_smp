				bool "Enable uart stream"
				default n

			config ADK_UART_STREAM_TEST
				depends on ADK_UART_STREAM
				bool "Enable uart stream test"
				default n
		endmenu

		menu "Vfs_stream"
			config ADK_VFS_STREAM
				depends on VFS
				bool "Enable vfs stream"
				default n

			config ADK_VFS_STREAM_TEST
				depends on ADK_VFS_STREAM
				bool "Enable vfs stream test"
				default n
		endmenu

		menu "I2s_stream"
			config ADK_I2S_STREAM
				bool "Enable I2S Stream Component"
				depends on I2S
				default n
				help
					Enable I2S stream component for audio data transmission via I2S interface.

			config ADK_I2S_STREAM_SUPPORT_MULTIPLE_SOURCE
				depends on ADK_I2S_STREAM
				bool "Enable I2S stream to support multiple sources. The module automatically selects playback based on the priority of multiple sources."
				default n

			config ADK_I2S_STREAM_TEST
				bool "Enable I2S Stream Test"
				depends on ADK_I2S_STREAM && ADK_ONBOARD_MIC_STREAM && ADK_ONBOARD_SPEAKER_STREAM
				default n
				help
					Enable I2S stream test functionality.
		endmenu

	endmenu

	menu "Audio_utils"

		depends on ADK

		config ADK_UTILS
			bool "Enable ADK debug utils"
			default y

		config ADK_UART_UTIL
			depends on ADK_UTILS
			bool "Enable ADK uart debug util"
			default y

		config ADK_COUNT_UTIL
			depends on ADK_UTILS
			bool "Enable ADK count debug util"
			default y

		config ADK_VFS_UTIL
			depends on ADK_UTILS
			bool "Enable ADK vfs debug util"
			default y

		config ADK_DEBUG_DUMP_UTIL
			depends on ADK_UTILS && ADK_UART_UTIL
			bool "Enable ADK debug dump util"
			default y

		config ADK_DEBUG_DUMP_DATA_TYPE_EXTENSION
			depends on ADK_DEBUG_DUMP_UTIL
			bool "Enable ADK debug dump data type extension"
			default n
	endmenu

endmenu
