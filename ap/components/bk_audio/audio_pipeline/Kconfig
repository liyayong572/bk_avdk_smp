	menu "Audio_streams"

		depends on ADK

		menu "Array_stream"
			config ADK_ARRAY_STREAM
				bool "Enable Audio Array stream"
				default n

			config ADK_ARRAY_STREAM_TEST
				depends on ADK_ARRAY_STREAM
				bool "Enable Audio Array stream test"
				default n
		endmenu

		menu "Frame_array_stream"
			config ADK_FRAME_ARRAY_STREAM
				bool "Enable Audio Frame Array stream"
				default n

			config ADK_FRAME_ARRAY_STREAM_TEST
				depends on ADK_FRAME_ARRAY_STREAM
				bool "Enable Audio Frame Array stream test"
				default n
		endmenu

		menu "Onboard_dual_dmic_stream"
			config ADK_ONBOARD_DUAL_DMIC_MIC_STREAM
				depends on AUDIO_DMIC
				bool "Enable Onboard dual dmic stream"
				default n
		endmenu

		menu "Onboard_mic_stream"
			config ADK_ONBOARD_MIC_STREAM
				depends on AUDIO_ADC
				bool "Enable onboard mic stream"
				default n

			config ADK_ONBOARD_MIC_STREAM_TEST
				depends on ADK_ONBOARD_MIC_STREAM && ADK_UART_STREAM
				bool "Enable onboard mic stream test"
				default n
		endmenu

		menu "Onboard_speaker_stream"
			config ADK_ONBOARD_SPEAKER_STREAM
				depends on AUDIO_DAC
				bool "Enable onboard speaker stream"
				default n

			config ADK_ONBOARD_SPEAKER_STREAM_SUPPORT_MULTIPLE_SOURCE
				depends on ADK_ONBOARD_SPEAKER_STREAM
				bool "Enable onboard speaker stream to support multiple sources. The module automatically selects playback based on the priority of multiple sources."
				default n

			config ADK_ONBOARD_SPEAKER_STREAM_TEST
				depends on ADK_ONBOARD_SPEAKER_STREAM
				bool "Enable onboard speaker stream test"
				default n
		endmenu

		menu "Raw_stream"
			config ADK_RAW_STREAM
				bool "Enable raw stream"
				default n

			config ADK_RAW_STREAM_TEST
				depends on ADK_RAW_STREAM
				bool "Enable raw stream test"
				default n
		endmenu

		menu "Uac_mic_stream"
			config ADK_UAC_MIC_STREAM
				depends on USBH_UAC
				bool "Enable uac mic stream"
				default n

			config ADK_UAC_MIC_STREAM_TEST
				depends on ADK_UAC_MIC_STREAM && ADK_UART_STREAM
				bool "Enable uac mic stream test"
